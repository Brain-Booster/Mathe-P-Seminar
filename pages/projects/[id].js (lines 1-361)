        {/* 3D Model Viewer */}
        {project.modelPath && (
          <div style={{ 
            width: '100%', 
            height: '350px', 
            borderRadius: '10px', 
            marginBottom: '2.5rem',
            overflow: 'hidden'
          }}>
            <ModelViewerComponent modelPath={project.modelPath} />
          </div>
        )} 